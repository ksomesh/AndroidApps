<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".SummaryFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/lavender_border_fill_background"
        android:text="Summary" />
    <TextView
        android:id="@+id/tv_tot_asset"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:layout_below="@+id/tv_summary"
        android:textColor="@color/black"
        android:background="@drawable/lavender_border_fill_background"
        android:text="Total Asset :" />
    <TextView
        android:id="@+id/tv_tot_liab"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:layout_below="@+id/tv_tot_asset"
        android:textColor="@color/black"
        android:background="@drawable/lavender_border_fill_background"
        android:text="Total Liability :" />
    <TextView
        android:id="@+id/tv_tot_inc"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:layout_below="@+id/tv_tot_liab"
        android:textColor="@color/black"
        android:background="@drawable/lavender_border_fill_background"
        android:text="Total Income :" />
    <TextView
        android:id="@+id/tv_tot_exp"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:layout_below="@+id/tv_tot_inc"
        android:textColor="@color/black"
        android:background="@drawable/lavender_border_fill_background"
        android:text="Total Expense :" />
    <TextView
        android:id="@+id/tv_tot_asset_val"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="200dp"
        android:gravity="center"
        android:layout_below="@id/tv_summary"
        android:textColor="@color/black"
        android:background="@drawable/lavender_border_fill_background"
        android:text="Total Asset :" />
    <TextView
        android:id="@+id/tv_tot_liab_val"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="200dp"
        android:gravity="center"
        android:layout_below="@+id/tv_tot_asset"
        android:textColor="@color/black"
        android:background="@drawable/lavender_border_fill_background"
        android:text="Total Liability :" />
    <TextView
        android:id="@+id/tv_tot_inc_val"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="200dp"
        android:gravity="center"
        android:layout_below="@+id/tv_tot_liab"
        android:textColor="@color/black"
        android:background="@drawable/lavender_border_fill_background"
        android:text="Total Income :" />
    <TextView
        android:id="@+id/tv_tot_exp_val"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="200dp"
        android:gravity="center"
        android:layout_below="@+id/tv_tot_inc"
        android:textColor="@color/black"
        android:background="@drawable/lavender_border_fill_background"
        android:text="Total Expense :" />

    <Spinner
        android:id="@+id/sp_summary_acc"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@id/tv_tot_exp_val"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/lavender_border_fill_background"
        android:entries="@array/dropdown_Account_items"
        android:gravity="center"
        android:spinnerMode="dropdown" />
    <TextView
        android:id="@+id/tv_summary_acc_val"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="200dp"
        android:gravity="center"
        android:layout_below="@+id/tv_tot_exp_val"
        android:textColor="@color/black"
        android:background="@drawable/lavender_border_fill_background"
        android:text="Calculating..." />

    <Button
        android:id="@+id/btn_downloadSummary"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_below="@+id/sp_summary_acc"
        android:layout_marginTop="15dp"
        android:text="Download summary"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:padding="8dp"
        android:background="@drawable/lavender_border_fill_background"
        android:layout_centerHorizontal="true"
        android:textSize="18sp" />
    <Button
        android:id="@+id/btn_reset"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btn_downloadSummary"
        android:layout_marginTop="15dp"
        android:text="Reset"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:padding="8dp"
        android:background="@drawable/lavender_border_fill_background"
        android:layout_centerHorizontal="true"
        android:textSize="18sp" />

</RelativeLayout>