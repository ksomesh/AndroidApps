<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".ExpenseFragment">
    <include layout="@layout/actionbar"/>
    <EditText
        android:id="@+id/expense_Date"
        android:background="@drawable/lavender_border_fill_background"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:textColorHint="@color/black"
        android:hint="Select a date"
        android:textColor="@color/black"
        android:focusable="false" />
    <!-- Edit Text for String Input -->
    <EditText
        android:id="@+id/expense_desc"
        android:layout_below="@id/expense_Date"
        android:background="@drawable/lavender_border_fill_background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:textColor="@color/black"
        android:hint="Description" />

    <!-- Edit Text for Number Input -->
    <EditText
        android:id="@+id/expense_amount"
        android:layout_below="@id/expense_desc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:layout_width="350dp"
        android:background="@drawable/lavender_border_fill_background"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/baseline_currency_rupee_24"
        android:inputType="number"
        android:textColor="@color/black"
        android:hint="Amount" />

    <Spinner
        android:id="@+id/spinner_expense_src"
        android:layout_below="@id/expense_amount"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:spinnerMode="dropdown"
        android:background="@drawable/lavender_border_fill_background"
        android:entries="@array/dropdown_Account_items" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expense_amount"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="330dp"
        android:src="@drawable/baseline_arrow_drop_down_24"
        />
    <Spinner
        android:id="@+id/spinner_expense_tag"
        android:layout_below="@id/spinner_expense_src"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:spinnerMode="dropdown"
        android:background="@drawable/lavender_border_fill_background"
        android:entries="@array/dropdown_tag_items" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_expense_src"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="330dp"
        android:src="@drawable/baseline_arrow_drop_down_24"
        />
    <Button
        android:id="@+id/expense_add_button"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_below="@id/spinner_expense_tag"
        android:layout_marginTop="15dp"
        android:text="Add"
        android:padding="8dp"
        android:textColor="@color/black"
        android:background="@drawable/lavender_border_fill_background"
        android:layout_centerHorizontal="true"
        android:textSize="18sp" />

</RelativeLayout>